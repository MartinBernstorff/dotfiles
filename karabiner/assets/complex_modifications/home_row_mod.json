{
  "title": "@ Home Home Row Keys for Modifiers (using if_alone)",
  "maintainers": [
    "eytanhanig"
  ],
  "rules": [
    {
      "description": "Shift, Control, Option, Command ⟶  Home Row",
      "manipulators": [
        {
          "parameters": {
            "basic.to_delayed_action_delay_milliseconds": 70,
            "basic.to_if_held_down_threshold_milliseconds": 70
          },
          "description": "Hold A ⟶ Left Shift",
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_delayed_action": {
            "to_if_canceled": [
              {
                "key_code": "a"
              }
            ]
          },
          "to_if_alone": [
            {
              "key_code": "a",
              "halt": true
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "left_shift"
            }
          ]
        },
        {
