{
  "title": "@ Home Home Row Keys for Modifiers (using if_alone)",
  "maintainers": [
    "@m_bernstorff"
  ],
  "rules": [
    {
      "description": "Shift, Control, Option, Command ⟶  Home Row",
      "manipulators": [
        {
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 80
          },
          "description": "Hold A ⟶ Left Shift",
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_held_down": [
            {
              "key_code": "left_shift",
              "halt": true
            }
          ],
          "to_after_key_up": [
            {
              "key_code": "a"
            }
          ]
        },
        {
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 80
          },
          "description": "Hold S ⟶ Left Control",
          "type": "basic",
          "from": {
            "key_code": "s",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_held_down": [
            {
              "key_code": "left_control",
              "halt": true
            }
          ],
          "to_after_key_up": [
            {
              "key_code": "s"
            }
          ]
        },
        {
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 80
          },
          "description": "Hold D ⟶ Left Option",
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_held_down": [
            {
              "key_code": "left_option",
              "halt": true
            }
          ],
          "to_after_key_up": [
            {
              "key_code": "d"
            }
          ]
        },
        {
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 80
          },
          "description": "Hold F ⟶ Left Command",
          "type": "basic",
          "from": {
            "key_code": "f",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_held_down": [
            {
              "key_code": "left_command",
              "halt": true
            }
          ],
          "to_after_key_up": [
            {
              "key_code": "f"
            }
          ]
        },
        {
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 80
          },
          "description": "Hold Semicolon ⟶ Right Shift",
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_held_down": [
            {
              "key_code": "right_shift",
              "halt": true
            }
          ],
          "to_after_key_up": [
            {
              "key_code": "semicolon"
            }
          ]
        }
      ]
    },
    {
      "description": "Disable left modifier cluster",
      "manipulators": [
        {
          "description": "Hold Left Shift",
          "type": "basic",
          "from": {
            "key_code": "left_shift"
          },
          "to": {
            "key_code": "vk_none"
          }
        },
        {
          "description": "Hold Left Control",
          "type": "basic",
          "from": {
            "key_code": "left_control"
          },
          "to": {
            "key_code": "vk_none"
          }
        },
        {
          "description": "Hold Left Option",
          "type": "basic",
          "from": {
            "key_code": "left_option"
          },
          "to": {
            "key_code": "vk_none"
          }
        },
        {
          "description": "Hold Left Command",
          "type": "basic",
          "from": {
            "key_code": "left_command"
          },
          "to": {
            "key_code": "vk_none"
          }
        }
      ]
    }
  ]
}
