# Focusing windows
ctrl + cmd - h : yabai -m window --focus west
ctrl + cmd - j : yabai -m window --focus south
ctrl + cmd - k : yabai -m window --focus north
ctrl + cmd - l : yabai -m window --focus east

# Fullscreen
ctrl + cmd - f : yabai -m window --toggle zoom-fullscreen

# Moving windows
ctrl + cmd - w : yabai -m window --swap north
ctrl + cmd - s : yabai -m window --swap south
ctrl + cmd - a : yabai -m window --swap west
ctrl + cmd - d : yabai -m window --swap east

# Move to another display
ctrl + alt + cmd - a : yabai -m window --display recent
ctrl + alt + cmd - d : yabai -m window --display prev

# Resize windows
ctrl + cmd - i: yabai -m window --resize right:-335:0 2> /dev/null || yabai -m window --resize left:-335:0 2> /dev/null 
ctrl + cmd - o: yabai -m window --resize right:335:0 2> /dev/null || yabai -m window --resize left:335:0 2> /dev/null 
